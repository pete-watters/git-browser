<section class="container">
    <div class="wrapper">
        <h1 id="main-header">Ember - GitHub Browser</h1>

        <fieldset>

            {{#if validGitHubToken}}
                <p>
                    Valid Token found - {{gitHubApiToken}}
                </p>

            {{else}}

                <form class="form form--authenticateGitHubAccessToken" {{action 'authenticateGitHubAccessToken' on='submit'}}>
                    <div class="form__label--container">
                        <label for="gitHubAccessToken">GitHub API token</label>
                    </div>
                    <div class="form__input--container">
                        {{validated-input value=gitHubAccessToken valid=gitHubAccessTokenValid validationType='token' placeholder="Enter your GitHub API token" type="text" required=true input-class="form-control"}}
                    </div>
                </form>
            {{/if}}

                <form class="form form--organisationSearch">
                    <div class="form__label--container" >
                        <label class="form__label" for="organisationSearchString">GitHub Organisation</label>
                    </div>
                    <div class="form__input--container">

                        {{validated-input value=organisationSearchString valid=organisationSearchStringValid validationType='text' placeholder="Enter GitHub organisation name" type="text" required=true input-class="form-control"}}

                    </div>
                </form>

                    {{#link-to 'organisation-details' organisationSearchString}} <button type="submit" disabled={{unless organisationSearchStringValid true}}>Search</button>{{/link-to}}



                {{outlet}}

        </fieldset>
    </div>
</section>




