<section class="container">
    <div class="wrapper">
        <h1 id="main-header">Ember - GitHub Browser</h1>

        <fieldset>

            {{#unless validGitHubToken}}
                <p>
                    Valid Token found - {{gitHubApiToken}}
                </p>

            {{else}}

                <form class="form form--authenticateGitHubAccessToken" {{action 'authenticateGitHubAccessToken' on='submit'}}>
                    <div class="form__label--container">
                        <label for="gitHubAccessToken">GitHub API token</label>
                    </div>
                    <div class="form__input--container">
                        {{validated-input value=gitHubAccessToken valid=gitHubAccessTokenValid placeholder="Enter your GitHub API token" type="text" required=true input-class="form-control"}}
                    </div>
                </form>
            {{/unless}}

                <form class="form form--organisationSearch" {{action 'searchForOrganisation' on='submit'}}>
                    <div class="form__label--container" >
                        <label class="form__label" for="organisationSearchString">GitHub Organisation</label>
                    </div>
                    <div class="form__input--container">

                        {{validated-input value=gitHubAccessToken valid=gitHubAccessTokenValid placeholder="Enter your GitHub API token" type="text" required=true input-class="form-control"}}
                        {{input id='organisationSearchString' type='text' class='search' placeholder='Enter GitHub organisation name' value=organisationSearchString required=true}}
                    </div>
                    <div class="form__input--container" >
                        {{#link-to 'organisation-details' organisationSearchString}} <button type="submit" disabled={{validOrganisationSearchString}}>Search</button>{{/link-to}}
                    </div>
                </form>

                {{outlet}}

        </fieldset>
    </div>
</section>




